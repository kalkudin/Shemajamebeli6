<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="150dp"
    android:layout_margin="30dp"
    android:background="@drawable/rounded_corners_shape"
    android:id="@+id/container">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/booking_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/booking_time"
        android:textColor="@color/ghost_white"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/ic_current_progress"
        app:layout_constraintStart_toEndOf="@+id/ic_course_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/booking_itme_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/sample_booking_time_2"
        android:textColor="@color/ghost_white"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@+id/ic_current_progress"
        app:layout_constraintStart_toEndOf="@+id/ic_course_icon"
        app:layout_constraintTop_toBottomOf="@id/booking_time" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_current_progress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/full_round_corner"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_course_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/rounded_corners_shape"/>


</androidx.constraintlayout.widget.ConstraintLayout>